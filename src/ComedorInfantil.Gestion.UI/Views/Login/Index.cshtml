@using Microsoft.Extensions.Options
@inject IConfiguration apiSettings

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Inicio de Sesión</title>
    <link rel="stylesheet" href="~/css/login.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script>
        const API_BASE_URL = '@apiSettings["ComedorApiBaseUrl"]';
    </script>
</head>
<body>
    <main>
        <section class="h-100 d-flex align-items-center">
            <div class="container-fluid h-100">
                <div class="row h-100">
                    <div class="col-sm-6 text-black d-flex flex-column justify-content-center">

                        <div class="px-5 ms-xl-4 mb-4">
                            <i class="bi bi-heart me-3" style="color: #709085; font-size: xx-large;"></i>
                            <span class="h1 fw-bold mb-0">Gestor de Comedor</span>
                        </div>

                        <div class="px-5 ms-xl-4">
                            <form id="frmLogin" style="width: 23rem;">
                                <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Inicio de Sesión</h3>

                                <span id="errorLogin" class="text-danger"></span>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="txtEmailLogin">Correo Electrónico</label>
                                    <input type="text" id="txtEmailLogin" class="form-control form-control-lg" />
                                    <span id="errorEmailLogin" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="txtPasswordLogin">Contraseña</label>
                                    <input type="password" id="txtPasswordLogin" class="form-control form-control-lg" />
                                    <span id="errorPasswordLogin" class="text-danger"></span>
                                </div>

                                <div class="pt-1 mb-4">
                                    <button id="btnLoginSubmit" class="btn btn-info btn-lg btn-block" type="submit">Iniciar Sesión</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="col-sm-6 px-0 d-none d-sm-block">
                        <img src="~/assets/ayusa-social-2.webp"
                             alt="Login image" class="w-100" style="object-fit: cover; object-position: left; height:100%;">
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="py-4 bg-light border-top">
        <div class="container-fluid px-4">
            <div class="d-flex flex-column flex-md-row align-items-center justify-content-between small">
                <div class="text-muted text-center text-md-start mb-2 mb-md-0">
                    Desarrollado con 💻 por <strong>Freddy Antonio Ordoñez Aguilar</strong>
                </div>
                <div class="text-center text-md-end">
                    <a href="mailto:freddy12aguilar@outlook.com" class="text-decoration-none me-3">
                        <i class="bi bi-envelope-fill"></i> freddy12aguilar@outlook.com
                    </a>
                    <a href="https://github.com/freddy-ordonez" target="_blank" class="text-decoration-none">
                        <i class="bi bi-github"></i> GitHub
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/login.js"></script>
</body>
</html>
